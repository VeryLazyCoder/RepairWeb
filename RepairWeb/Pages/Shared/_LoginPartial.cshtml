@using Microsoft.AspNetCore.Identity
@using RepairWeb.Authorization
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        var user = await UserManager.GetUserAsync(User);
        var fullName = user?.FullName ?? "User";
        var profileImageUrl = user?.ProfileImageURL == "" ? "/images/defaultUser.png" :
        user?.ProfileImageURL;
        if (User.HasClaim(Claims.UserRole, "клиент"))
        {
            <partial name="_ClientNotificationAvatar" />
        }
        else
        {
            <div class="d-flex align-items-center">
                <img src="@profileImageUrl" alt="Profile Image"
                     class="rounded-circle" style="width: 40px; height: 40px; margin-right: 10px;" />
            </div>
        }

        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @fullName!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
