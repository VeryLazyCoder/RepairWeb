@page
@model RepairWeb.Pages.Repair.AdminModel
@{
    <h1>Здесь представлены все нераспрелённые заявки</h1>
    <div class="table-responsive">
        <table class="table table-striped recipe">
            <thead>
            <tr>
                <th>Оборудование</th>
                <th>Дата создания</th>
                <th>Клиент жалуется на</th>
                <th>Исполнитель</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var request in Model.Requests)
            {
                <tr>
                    <td class="align-middle">@request.Equipment</td>
                    <td class="align-middle">@request.RequestDate.ToString("dd.MM.yyyy")</td>
                    <td class="align-middle">@request.ProblemDescription</td>
                    <td></td>
                </tr>
            }
            </tbody>
        </table>
    </div>
    <p>Список изъявивших желание стать манагером</p>
    <table class="table table-striped" id="ingredients">
        <thead>
        <tr>
            <th>Login</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
            @{
                for (int i = 0; i < Model.Candidates.Count; i++)
                {
                    var candidate = Model.Candidates[i];
                    <tr>
                        <td>@candidate.UserName</td>
                        <td>@candidate.FullName</td>
                        <td>

                            @{
                                var i1 = i;
                            }
                            <form method="post">
                                <input type="hidden" name="CandidateId" value="@candidate.Id" />
                                <button type="submit" asp-page-handler="Promote" class="btn btn-success">Назначить менеджером</button>
                                <button type="submit" asp-page-handler="Reject" class="btn btn-danger">Отказать</button>
                            </form>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
}
