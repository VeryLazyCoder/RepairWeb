@page
@model RepairWeb.Pages.Repair.AdminModel
@{
    <h1 class="text-center mb-4">Здесь представлены все нераспределённые заявки</h1>

    <div class="container">
        <div class="row">
            @foreach (var request in Model.Requests)
            {
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Оборудование: @request.Equipment</h5>
                            <p class="card-text"><strong>Дата создания:</strong> @request.RequestDate.ToString("dd.MM.yyyy")</p>
                            <p class="card-text"><strong>Клиент жалуется на:</strong> @request.ProblemDescription</p>

                            <form id="assignForm" method="post" asp-page-handler="Assign" onsubmit="return validateForm()">
                                <label for="executor">Выберите исполнителя:</label>
                                <select id="executor" name="ExecutorId" class="form-control">
                                    <option value="">-- Выберите исполнителя --</option>
                                    @foreach (var executor in Model.Executors)
                                    {
                                        <option value="@executor.Id">@executor.Name</option>
                                    }
                                </select>
                                <input type="hidden" name="RequestId" value="@request.RequestId" />
                                <button type="submit" class="btn btn-primary mt-2">Назначить</button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="d-flex justify-content-center mt-3">
        <a asp-page="/Admin/Reports" class="btn btn-primary mt-2">Просмотреть отчёты</a>
    </div>
    <h2 class="text-center mt-5">Список изъявивших желание стать менеджером</h2>

    <div class="container">
        <div class="row">
            @foreach (var candidate in Model.Candidates)
            {
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">@candidate.FullName (@candidate.UserName)</h5>

                            <form method="post">
                                <input type="hidden" name="CandidateId" value="@candidate.Id" />
                                <div class="d-flex justify-content-between">
                                    <button type="submit" asp-page-handler="Promote" class="btn btn-success">Назначить менеджером</button>
                                    <button type="submit" asp-page-handler="Reject" class="btn btn-danger">Отказать</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}



<script>
    function validateForm() {
        var executorSelect = document.getElementById("executor");

        if (executorSelect.value === "") {
            alert("Пожалуйста, выберите исполнителя.");
            return false;
        }
        return true;
    }
</script>