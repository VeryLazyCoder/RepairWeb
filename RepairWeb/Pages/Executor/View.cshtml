@page "{id}"
@model RepairWeb.Pages.Executor.ViewModel
@{
    ViewData["Title"] = Model.Request.Equipment;
}
<form method="post">
    <div class="d-flex justify-content-between align-items-center">
        <h1>Заявка от @Model.Request.RequestDate.ToString("d")</h1>
        <div class="d-flex align-items-center">
            <span class="me-2">Назначенный статус</span>
            <select asp-for="@Model.Request.Status" 
                    asp-items="@(new SelectList(Model.GetStatusValues()))" class="form-select">
            </select>
        </div>
    </div>
    <div class="container mt-3">
        <div class="row">
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-body">
                        <strong>Оборудование</strong>
                        <div>@Model.Request.Equipment</div>
                    </div>
                </div>

            </div>

            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-body">
                        <strong>Клиент жалуется на</strong>
                        <div>@Model.Request.ProblemDescription</div>
                    </div>
                </div>
            </div>

            <div class="col-md-12 mb-5">
                <div class="card">
                    <div class="card-body">
                        <strong>Ваш комментарий</strong>
                        <textarea asp-for="Request.ExecutorComment" class="form-control">@Model.Request.ExecutorComment</textarea>
                    </div>
                </div>
            </div>

            <input type="hidden" value="@Model.Request.Id"/>
            <div class="d-flex justify-content-end mt-3">
                <button type="submit" class="btn btn-primary">Изменить данные</button>
            </div>
            
            <div class="d-flex justify-content-center mt-3">
                <input type="hidden" name="id" value="@Model.Request.Id" />
                <button type="submit" asp-page-handler="Report" class="btn btn-success mt-3" onclick="return confirm('Вы уверены, что хотите закрыть заявку и начать работу над отчётом?');">
                    Завершить ремонт
                </button>
            </div>
        </div>
    </div>
</form>

